/* Layout styles for Legal Extractor TUI screens and containers */

/* Main application container */
#main-container {
    width: 100%;
    height: 1fr;
    layout: horizontal;
}

/* Sidebar panel (left controls) - responsive */
#sidebar-panel {
    width: 30%;
    min-width: 30;
    max-width: 45;
    height: 100%;
    padding: 0;
    background: #0d0d0d;
    border-right: solid $primary;
    overflow-y: auto;
}

#sidebar-panel:focus-within {
    border-right: solid $accent;
}

/* Content area (main content) - fills remaining space */
#content-area {
    width: 1fr;
    height: 100%;
    padding: 0;
    layout: vertical;
    overflow-y: auto;
}

/* Legacy IDs for compatibility */
#left-panel {
    width: 30%;
    min-width: 30;
    max-width: 45;
    height: 100%;
    dock: left;
    padding: 0;
    background: #0d0d0d;
    border-right: solid $primary;
}

#left-panel:focus-within {
    border-right: solid $accent;
}

#center-panel {
    width: 100%;
    height: 100%;
    padding: 0;
    layout: vertical;
}

/* Progress area (collapsible) */
#progress-area {
    height: auto;
    max-height: 12;
    min-height: 8;
    margin-bottom: 0;
    background: #0d0d0d;
    border: solid $accent;
    padding: 0;
}

#progress-area.hidden {
    display: none;
    height: 0;
    max-height: 0;
    min-height: 0;
    margin-bottom: 0;
    padding: 0;
}

#progress-area.collapsed {
    max-height: 1;
    min-height: 1;
    overflow: hidden;
}

/* Results area (main content) */
#results-area {
    height: 1fr;
    width: 100%;
    min-height: 20;
}

/* Panel containers */
.panel {
    background: #0d0d0d;
    border: solid $primary;
    padding: 0 1;
    margin: 0;
}

.panel:focus-within {
    border: solid $accent;
}

.panel-header {
    text-style: bold;
    color: $accent;
    padding-bottom: 0;
    border-bottom: solid $primary;
    margin-bottom: 0;
}

.panel-content {
    padding: 0;
}

.panel-footer {
    padding-top: 0;
    border-top: solid $primary;
    margin-top: 0;
}

/* Control sections in left panel */
.control-section {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: solid $primary;
}

.control-section:last-child {
    border-bottom: none;
}

.control-section-title {
    text-style: bold;
    color: $secondary;
    padding-bottom: 0;
    margin-bottom: 0;
}

/* Modal overlay */
.modal-overlay {
    align: center middle;
    background: #000000;
}

.modal-container {
    width: 80;
    height: auto;
    max-height: 80%;
    background: #0d0d0d;
    border: solid $accent;
    padding: 0;
}

.modal-title {
    text-style: bold;
    color: $accent;
    text-align: center;
    padding-bottom: 0;
    border-bottom: solid $primary;
    margin-bottom: 0;
}

.modal-body {
    padding: 0;
    overflow-y: auto;
    max-height: 60;
}

.modal-footer {
    padding-top: 0;
    border-top: solid $primary;
    text-align: center;
    margin-top: 0;
}

/* Grid layouts */
.grid-2col {
    layout: grid;
    grid-size: 2 1;
    grid-columns: 1fr 1fr;
    grid-gutter: 1;
}

.grid-3col {
    layout: grid;
    grid-size: 3 1;
    grid-columns: 1fr 1fr 1fr;
    grid-gutter: 1;
}

.grid-auto {
    layout: grid;
    grid-size: 2 1;
    grid-columns: auto 1fr;
    grid-gutter: 1;
}

/* Metadata grid (label: value pairs) */
.metadata-grid {
    layout: grid;
    grid-size: 2 1;
    grid-columns: 20 1fr;
    grid-gutter: 0;
    padding: 0;
}

/* Horizontal layout */
.horizontal {
    layout: horizontal;
    height: auto;
    align: left middle;
}

.horizontal-space-between {
    layout: horizontal;
    height: auto;
    align: left middle;
}

.horizontal-space-between > * {
    margin-right: 2;
}

.horizontal-space-between > *:last-child {
    margin-right: 0;
}

/* Vertical layout */
.vertical {
    layout: vertical;
    width: auto;
}

/* Alignment utilities */
.center {
    align: center middle;
}

.align-left {
    align: left middle;
}

.align-right {
    align: right middle;
}

.align-top {
    align: center top;
}

.align-bottom {
    align: center bottom;
}

/* Fill available space */
.fill {
    width: 100%;
    height: 100%;
}

.fill-width {
    width: 100%;
}

.fill-height {
    height: 100%;
}

/* Scrollable containers */
.scrollable {
    overflow-y: auto;
    overflow-x: hidden;
}

.scrollable-x {
    overflow-x: auto;
    overflow-y: hidden;
}

.scrollable-both {
    overflow-x: auto;
    overflow-y: auto;
}

/* Section dividers */
.section-divider {
    height: 1;
    width: 100%;
    background: $primary;
    margin: 2 0;
}

/* Button groups */
.button-group {
    layout: horizontal;
    height: auto;
    align: left middle;
    padding: 1 0;
}

.button-group > Button {
    margin-right: 1;
}

.button-group > Button:last-child {
    margin-right: 0;
}

.button-group-right {
    layout: horizontal;
    height: auto;
    align: right middle;
    padding: 1 0;
}

.button-group-center {
    layout: horizontal;
    height: auto;
    align: center middle;
    padding: 1 0;
}

/* Tabs container */
.tabs-container {
    height: 100%;
    width: 100%;
}

/* Content wrapper with padding */
.content-wrapper {
    padding: 2;
}

/* List containers */
.list-container {
    padding: 0;
    overflow-y: auto;
}

.list-item {
    padding: 0;
    margin-bottom: 0;
    border: solid $primary;
    background: $surface;
}

.list-item:hover {
    border: solid $primary;
    background: $panel;
}

.list-item.selected {
    border: solid $accent;
    background: $panel;
}

/* Status bar at bottom */
.status-bar-container {
    dock: bottom;
    height: 1;
    background: #0d0d0d;
    border-top: solid $primary;
}

/* Header bar at top */
.header-bar-container {
    dock: top;
    height: 1;
    background: #0d0d0d;
    border-bottom: solid $primary;
}
