/* Widget-specific styles for Legal Extractor TUI */
/* Cyberpunk/Neon aesthetic with heavy borders and depth */

/* ==================================================
   FILE SELECTOR WIDGET
   ================================================== */
FileSelector {
    height: auto;
    min-height: 12;
    border: heavy $primary;
    padding: 1 2;
    margin-bottom: 1;
    background: #0d0d0d;
}

FileSelector:focus-within {
    border: heavy $accent;
    background: #0d0d0d;
}

FileSelector .selector-title {
    color: $accent;
    text-style: bold;
    margin-bottom: 1;
    padding-bottom: 1;
    border-bottom: thick $primary;
}

FileSelector .file-input-container {
    width: 100%;
    height: auto;
    margin-bottom: 1;
}

FileSelector #file-path-input {
    width: 1fr;
    margin-right: 1;
}

FileSelector #browse-button {
    width: auto;
    min-width: 14;
}

FileSelector .file-info {
    background: #000000;
    border: thick $primary;
    padding: 1;
    margin-top: 1;
}

FileSelector .file-info-row {
    width: 100%;
    height: auto;
    margin-bottom: 0;
}

FileSelector .file-info-label {
    width: 12;
    color: $secondary;
    text-style: bold;
}

FileSelector .file-info-value {
    width: 1fr;
    color: $foreground;
}

FileSelector .error {
    color: $error;
    text-style: bold;
    background: #000000;
    padding: 1;
    margin-top: 1;
    border: heavy $error;
}

FileSelector .valid {
    color: $success;
    text-style: bold;
    background: #000000;
    padding: 1;
    margin-top: 1;
    border: heavy $success;
}

FileSelector #status-message {
    height: auto;
    margin-top: 1;
}

FileSelector #status-message.error {
    color: $error;
    text-style: bold;
    padding: 1;
    border: heavy $error;
}

FileSelector #status-message.valid {
    color: $success;
    text-style: bold;
    padding: 1;
    border: heavy $success;
}

/* ==================================================
   SYSTEM SELECTOR WIDGET
   ================================================== */
SystemSelector {
    height: auto;
    min-height: 5;
    border: heavy $primary;
    padding: 1;
    margin-bottom: 1;
    background: #0d0d0d;
}

SystemSelector:focus-within {
    border: heavy $accent;
    background: #0d0d0d;
}

SystemSelector .system-option {
    padding: 1;
    margin-bottom: 1;
    background: #000000;
    border: thick $primary;
}

SystemSelector .system-option:hover {
    border: thick $accent;
    background: #000000;
}

SystemSelector .system-option.selected {
    border: heavy $accent;
    background: #000000;
    text-style: bold;
}

SystemSelector .system-label {
    color: $primary;
    text-style: bold;
}

SystemSelector .system-description {
    text-style: dim;
    padding-left: 2;
    color: $foreground 70%;
}

/* ==================================================
   CONFIG PANEL WIDGET
   ================================================== */
ConfigPanel {
    height: auto;
    border: heavy $primary;
    padding: 1 2;
    background: #0d0d0d;
    margin-bottom: 1;
}

ConfigPanel:focus-within {
    border: heavy $accent;
    background: #0d0d0d;
}

ConfigPanel .config-section {
    margin-bottom: 2;
    padding-bottom: 1;
    border-bottom: thick $primary-lighten-1;
}

ConfigPanel .config-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

ConfigPanel .config-label {
    color: $secondary;
    text-style: bold;
    padding-bottom: 1;
}

ConfigPanel .config-input {
    width: 100%;
    margin-bottom: 1;
}

ConfigPanel .config-hint {
    text-style: dim italic;
    padding: 0 1;
    color: $foreground 70%;
}

ConfigPanel Switch {
    margin: 1 0;
}

ConfigPanel Input {
    margin: 1 0;
}

/* ==================================================
   ACTION BUTTONS - Compact Icon Style
   ================================================== */
#action-buttons {
    width: 100%;
    height: 5;
    padding: 0 1;
    margin-top: 1;
    layout: horizontal;
    align: center middle;
}

#action-buttons Button {
    width: auto;
    min-width: 8;
    height: 3;
    margin: 0 1;
    padding: 0 1;
    text-style: bold;
}

/* RUN button - Green neon */
#extract-btn {
    background: #000000;
    color: $success;
    border: thick $success;
}

#extract-btn:hover {
    background: $success 20%;
    color: $success;
    border: heavy $success;
}

#extract-btn:focus {
    background: $success 30%;
    color: #000000;
    border: heavy $success;
}

/* SAVE button - Pink neon */
#save-btn {
    background: #000000;
    color: $primary;
    border: thick $primary;
}

#save-btn:hover {
    background: $primary 20%;
    color: $primary;
    border: heavy $primary;
}

#save-btn:focus {
    background: $primary 30%;
    color: #000000;
    border: heavy $primary;
}

/* CLEAR button - Red/error */
#clear-btn {
    background: #000000;
    color: $error;
    border: thick $error;
}

#clear-btn:hover {
    background: $error 20%;
    color: $error;
    border: heavy $error;
}

#clear-btn:focus {
    background: $error 30%;
    color: #000000;
    border: heavy $error;
}

/* ==================================================
   EXTRACTION PROGRESS WIDGET
   ================================================== */
ExtractionProgress {
    height: auto;
    min-height: 8;
    border: heavy $accent;
    padding: 1 2;
    background: #0d0d0d;
}

ExtractionProgress .progress-header {
    text-style: bold;
    color: $accent;
    padding-bottom: 1;
    border-bottom: thick $primary;
    margin-bottom: 1;
}

ExtractionProgress .stage {
    height: 2;
    margin-bottom: 1;
    padding: 0 1;
    border-left: solid $primary-lighten-1;
}

ExtractionProgress .stage.pending {
    text-style: dim;
    background: #000000;
    border-left: solid $primary;
}

ExtractionProgress .stage.active {
    color: $accent;
    background: #000000;
    border-left: heavy $accent;
    text-style: bold;
}

ExtractionProgress .stage.complete {
    color: $success;
    background: #000000;
    border-left: heavy $success;
}

ExtractionProgress .stage.error {
    color: $error;
    background: #000000;
    border-left: heavy $error;
    text-style: bold;
}

ExtractionProgress .stage-name {
    text-style: bold;
}

ExtractionProgress .stage-status {
    text-style: dim;
    padding-left: 2;
}

ExtractionProgress .stats {
    text-style: dim;
    text-align: right;
    padding-top: 1;
    border-top: thick $primary;
    margin-top: 1;
}

ExtractionProgress .stats-item {
    padding: 0 2;
}

ExtractionProgress ProgressBar {
    margin: 1 0;
}

/* ==================================================
   RESULTS PANEL WIDGET
   ================================================== */
ResultsPanel {
    height: 100%;
    width: 100%;
    border: heavy $primary;
    background: #0d0d0d;
}

ResultsPanel:focus-within {
    border: heavy $accent;
}

ResultsPanel TabbedContent {
    height: 100%;
    width: 100%;
}

ResultsPanel TabPane {
    padding: 1;
}

/* Preview tab */
ResultsPanel .preview-text {
    padding: 2;
    overflow-y: auto;
    height: 100%;
    background: #000000;
    border: thick $primary;
}

ResultsPanel .preview-empty {
    text-style: dim italic;
    text-align: center;
    padding: 4;
    color: $foreground 60%;
}

/* Metadata tab */
ResultsPanel .metadata-grid {
    padding: 2;
    overflow-y: auto;
}

ResultsPanel .metadata-row {
    margin-bottom: 1;
    padding: 1;
    background: #000000;
    border: thick $primary;
}

ResultsPanel .metadata-label {
    color: $secondary;
    text-style: bold;
    width: 20;
    display: block;
}

ResultsPanel .metadata-value {
    color: $foreground;
}

ResultsPanel .metadata-value.empty {
    text-style: dim italic;
    color: $foreground 60%;
}

/* Sections tab */
ResultsPanel .sections-list {
    padding: 1;
    overflow-y: auto;
    height: 100%;
}

ResultsPanel .section-item {
    padding: 2;
    margin-bottom: 1;
    border: thick $primary;
    background: #000000;
}

ResultsPanel .section-item:hover {
    border: heavy $accent;
    background: #000000;
}

ResultsPanel .section-header {
    text-style: bold;
    color: $primary;
    padding-bottom: 1;
    margin-bottom: 1;
    border-bottom: solid $primary-lighten-1;
}

ResultsPanel .section-title {
    color: $accent;
    text-style: bold;
}

ResultsPanel .section-confidence {
    padding-left: 2;
}

ResultsPanel .section-content {
    padding: 1 0;
    color: $foreground;
}

ResultsPanel .section-metadata {
    text-style: dim;
    padding-top: 1;
    border-top: solid $primary-lighten-1;
    margin-top: 1;
}

/* Export buttons */
ResultsPanel .export-buttons {
    dock: bottom;
    height: auto;
    padding: 1 2;
    align: right middle;
    background: #0d0d0d;
    border-top: heavy $primary;
}

ResultsPanel .export-buttons Button {
    margin-left: 1;
}

/* ==================================================
   STANDARD TEXTUAL WIDGETS (CUSTOMIZED)
   ================================================== */

/* Button - Cyberpunk style with heavy borders */
Button {
    background: #0d0d0d;
    color: $foreground;
    border: thick $primary;
    padding: 0 2;
    min-width: 10;
    height: 3;
}

Button:hover {
    background: #0d0d0d;
    border: heavy $accent;
    color: $accent;
}

Button:focus {
    background: #0d0d0d;
    color: $accent;
    text-style: bold;
    border: heavy $accent;
}

Button.-primary {
    background: #0d0d0d;
    color: $primary;
    border: heavy $primary;
    text-style: bold;
}

Button.-primary:hover {
    background: #0d0d0d;
    color: $accent;
    border: heavy $accent;
}

Button.-primary:focus {
    background: #0d0d0d;
    color: $accent;
    border: heavy $accent;
}

Button.-success {
    background: #0d0d0d;
    color: $success;
    border: heavy $success;
    text-style: bold;
}

Button.-success:hover {
    background: #0d0d0d;
    border: heavy $success;
}

Button.-danger {
    background: #0d0d0d;
    color: $error;
    border: heavy $error;
    text-style: bold;
}

Button.-danger:hover {
    background: #0d0d0d;
    border: heavy $error;
}

Button.-warning {
    background: #0d0d0d;
    color: $warning;
    border: heavy $warning;
    text-style: bold;
}

Button.-warning:hover {
    background: #0d0d0d;
    border: heavy $warning;
}

Button:disabled {
    background: $surface 50%;
    color: $foreground 50%;
    text-style: dim;
    border: solid $primary-darken-1;
}

/* Input - Neon glow on focus */
Input {
    background: #000000;
    color: $foreground;
    border: thick $primary;
    padding: 0 1;
    height: 3;
}

Input:focus {
    border: heavy $accent;
    background: #000000;
}

Input.-error {
    border: heavy $error;
}

Input.-success {
    border: heavy $success;
}

Input .input-placeholder {
    text-style: dim;
    color: $foreground 60%;
}

Input:disabled {
    background: $surface 50%;
    color: $foreground 50%;
    text-style: dim;
}

/* Label */
Label {
    color: $foreground;
    padding: 0 0 1 0;
}

Label.-required {
    color: $error;
    text-style: bold;
}

Label.-muted {
    text-style: dim;
    color: $foreground 70%;
}

/* Static (text display) */
Static {
    color: $foreground;
    background: transparent;
}

Static.-highlight {
    color: $accent;
    text-style: bold;
}

Static.-muted {
    text-style: dim;
    color: $foreground 70%;
}

Static.-primary {
    color: $primary;
}

Static.-secondary {
    color: $secondary;
}

Static.-error {
    color: $error;
}

Static.-success {
    color: $success;
}

Static.-warning {
    color: $warning;
}

/* Switch - Cyberpunk toggle */
Switch {
    height: 3;
    padding: 0 1;
}

Switch:focus {
    background: $panel;
    border: solid $accent;
}

Switch.-on {
    color: $success;
    text-style: bold;
}

Switch.-off {
    text-style: dim;
    color: $foreground 70%;
}

/* ProgressBar - Heavy border with depth */
ProgressBar {
    height: 1;
    background: #000000;
    border: thick $primary;
}

ProgressBar .bar--bar {
    background: $primary;
}

ProgressBar .bar--complete {
    background: $success;
}

ProgressBar .bar--indeterminate {
    background: $accent;
}

/* RadioSet */
RadioSet {
    padding: 1;
}

RadioSet RadioButton {
    padding: 1;
    margin-bottom: 1;
}

RadioSet RadioButton:focus {
    background: $panel;
    border: solid $accent;
}

/* Select - Cyberpunk dropdown */
Select {
    background: #000000;
    color: $foreground;
    border: thick $primary;
    height: 3;
    padding: 0 1;
}

Select:focus {
    border: heavy $accent;
    background: #000000;
}

Select SelectCurrent {
    background: #000000;
    color: $foreground;
}

Select SelectCurrent Static {
    color: $foreground;
}

Select.-has-value SelectCurrent Static {
    color: $accent;
    text-style: bold;
}

Select SelectOverlay {
    background: #0d0d0d;
    border: heavy $accent;
}

/* Select OptionList - Dropdown options with high contrast */
Select > SelectOverlay > OptionList {
    background: #000000;
    border: none;
}

Select OptionList > .option-list--option {
    padding: 1;
    background: #000000;
    color: $foreground;
    border-left: thick $primary;
}

Select OptionList > .option-list--option-hover {
    background: #000000;
    color: $foreground;
    border-left: heavy $accent;
}

Select OptionList > .option-list--option-highlighted {
    background: #000000;
    color: $accent;
    text-style: bold;
    border-left: heavy $accent;
}

/* TextArea - Neon bordered */
TextArea {
    background: #000000;
    color: $foreground;
    border: thick $primary;
    padding: 1;
}

TextArea:focus {
    border: heavy $accent;
    background: #000000;
}

/* DataTable - Cyberpunk grid */
DataTable {
    background: #0d0d0d;
    border: heavy $primary;
}

DataTable .datatable--header {
    background: #000000;
    text-style: bold;
    color: $primary;
    border-bottom: thick $primary;
}

DataTable .datatable--row {
    background: #000000;
}

DataTable .datatable--row:hover {
    background: #000000;
    border: thick $accent;
}

DataTable .datatable--cursor {
    background: #000000;
    color: $accent;
    text-style: bold;
    border: heavy $accent;
}

/* Tree - Neon file browser */
Tree {
    background: #0d0d0d;
    border: heavy $primary;
    padding: 1;
}

Tree:focus {
    border: heavy $accent;
}

Tree .tree--cursor {
    background: #000000;
    color: $accent;
    text-style: bold;
    border-left: heavy $accent;
}

Tree .tree--cursor .tree--label {
    text-style: bold;
}

/* LoadingIndicator - Animated neon */
LoadingIndicator {
    background: #000000;
    color: $accent;
}

/* Placeholder - Dashed cyberpunk border */
Placeholder {
    background: #000000;
    text-style: dim;
    border: dashed $primary;
    color: $foreground 60%;
}

/* ==================================================
   LOG PANEL (CUSTOM WIDGET)
   ================================================== */
LogPanel {
    background: #0d0d0d;
    border: heavy $primary;
    padding: 1;
    height: 100%;
    overflow-y: auto;
}

LogPanel .log-line {
    padding: 0 1;
}

LogPanel .log-line.error {
    color: $error;
    text-style: bold;
}

LogPanel .log-line.warning {
    color: $warning;
}

LogPanel .log-line.success {
    color: $success;
}

LogPanel .log-line.info {
    color: $primary-lighten-1;
}

LogPanel .log-line.debug {
    text-style: dim;
    color: $foreground 60%;
}

/* ==================================================
   STATUS BAR (CUSTOM WIDGET)
   ================================================== */
StatusBar {
    background: #0d0d0d;
    border-top: heavy $primary;
    height: 3;
    padding: 0 2;
    dock: bottom;
}

StatusBar .status-message {
    color: $accent;
    text-style: bold;
    padding-right: 1;
}

StatusBar .separator {
    color: $primary;
    padding: 0 1;
}

StatusBar .runtime-metric,
StatusBar .cpu-metric,
StatusBar .ram-metric {
    color: $foreground;
    padding: 0 1;
}

StatusBar .status-segment {
    padding: 0 1;
}

StatusBar .status-segment.left {
    dock: left;
}

StatusBar .status-segment.right {
    dock: right;
}

StatusBar .status-segment.center {
    dock: none;
}

StatusBar .status-icon {
    padding-right: 1;
    color: $accent;
}

StatusBar .status-text {
    color: $foreground;
}

StatusBar .status-error {
    color: $error;
    text-style: bold;
}

StatusBar .status-success {
    color: $success;
    text-style: bold;
}

StatusBar .status-warning {
    color: $warning;
    text-style: bold;
}

/* ==================================================
   HEADER WIDGET
   ================================================== */
Header {
    height: 16;
    dock: top;
    background: #0d0d0d;
    border-bottom: heavy $accent;
    padding: 1 2;
}

Header .logo {
    width: 100%;
    content-align: center middle;
    color: $accent;
    text-style: bold;
}

Header .title {
    width: 1fr;
    content-align: center middle;
    text-style: bold;
    color: $primary;
}

Header .status {
    width: auto;
    content-align: right middle;
    padding-right: 2;
    text-style: bold;
}

/* ==================================================
   SIDEBAR WIDGET
   ================================================== */
Sidebar {
    width: 24;
    dock: left;
    background: #0d0d0d;
    border-right: heavy $primary;
    padding: 1;
}

Sidebar.collapsed {
    width: 4;
}

Sidebar Button {
    width: 100%;
    margin-bottom: 1;
    background: #000000;
    border: thick $primary;
    text-style: bold;
}

Sidebar Button:hover {
    border: heavy $accent;
    background: #000000;
}

Sidebar OptionList {
    width: 100%;
    background: #0d0d0d;
    border: thick $primary;
    height: 1fr;
    padding: 1;
}

Sidebar OptionList > .option-list--option {
    padding: 1;
    margin-bottom: 1;
    background: #000000;
    border-left: thick $primary;
}

Sidebar OptionList > .option-list--option-hover {
    background: #000000;
    border-left: heavy $accent;
}

Sidebar OptionList > .option-list--option-selected {
    background: #000000;
    border-left: heavy $accent;
    text-style: bold;
    color: $accent;
}

Sidebar.collapsed OptionList {
    display: none;
}

Sidebar.collapsed Button {
    width: 100%;
}

/* ==================================================
   FILE BROWSER WIDGET
   ================================================== */
FileBrowser {
    width: 100%;
    height: 100%;
    background: #0d0d0d;
    border: heavy $primary;
}

FileBrowser .browser-title {
    width: 100%;
    height: 3;
    content-align: center middle;
    text-style: bold;
    color: $accent;
    background: #000000;
    border-bottom: thick $primary;
}

FileBrowser FilteredDirectoryTree {
    width: 100%;
    height: 1fr;
    background: #000000;
}

FileBrowser DirectoryTree {
    width: 100%;
    height: 1fr;
    background: #000000;
}

/* ==================================================
   RESULT VIEWER WIDGET
   ================================================== */
ResultViewer {
    width: 100%;
    height: 100%;
    background: #0d0d0d;
    border: heavy $primary;
}

ResultViewer .viewer-header {
    width: 100%;
    height: 3;
    background: #000000;
    border-bottom: thick $primary;
    padding: 0 2;
}

ResultViewer .viewer-title {
    width: 1fr;
    content-align: left middle;
    text-style: bold;
    color: $foreground;
}

ResultViewer .viewer-source {
    width: auto;
    content-align: right middle;
    text-style: dim italic;
    color: $foreground;
}

ResultViewer Markdown {
    width: 100%;
    height: 1fr;
    background: #000000;
    padding: 1 2;
}

ResultViewer .empty-message {
    width: 100%;
    height: 1fr;
    content-align: center middle;
    color: $primary;
    text-style: dim italic;
}

/* ==================================================
   STAGE INDICATOR WIDGET
   ================================================== */
StageIndicator {
    width: 100%;
    height: auto;
    margin-bottom: 1;
}

StageIndicator .stage-header {
    width: 100%;
    height: 1;
    margin-bottom: 1;
}

StageIndicator .stage-name {
    width: 1fr;
    text-style: bold;
}

StageIndicator .stage-status {
    width: auto;
    color: $foreground;
    text-style: dim;
}

StageIndicator ProgressBar {
    width: 100%;
}

StageIndicator .stage-message {
    width: 100%;
    height: 1;
    color: $foreground;
    text-style: dim;
    margin-top: 1;
}

StageIndicator.active .stage-name {
    color: $accent;
}

StageIndicator.completed .stage-name {
    color: $success;
}

StageIndicator.error .stage-name {
    color: $error;
}

StageIndicator.pending .stage-name {
    color: $foreground;
    text-style: dim;
}

/* ==================================================
   STAGE PROGRESS WIDGET
   ================================================== */
StageProgress {
    height: 3;
    width: 100%;
    layout: horizontal;
    background: #0d0d0d;
    border: thick $primary;
    margin-bottom: 1;
}

StageProgress .stage-label {
    width: 20;
    content-align: left middle;
    padding-left: 2;
}

StageProgress ProgressBar {
    width: 1fr;
    margin: 0 2;
}

StageProgress .stage-status {
    width: 8;
    content-align: center middle;
}

StageProgress.pending {
    border: thick $primary;
}

StageProgress.running {
    border: heavy $accent;
}

StageProgress.completed {
    border: heavy $success;
}

StageProgress.error {
    border: heavy $error;
}

/* ==================================================
   PIPELINE PROGRESS WIDGET
   ================================================== */
PipelineProgress {
    width: 100%;
    height: auto;
    background: #0d0d0d;
    border: thick $primary;
    padding: 1;
}

PipelineProgress .pipeline-title {
    width: 100%;
    text-align: center;
    text-style: bold;
    color: $foreground;
    margin-bottom: 1;
}

/* ==================================================
   POWERLINE WIDGETS
   ================================================== */
PowerlineBar {
    width: 100%;
    height: 1;
}

PowerlineHeader {
    width: 100%;
    height: 1;
    layout: horizontal;
}

PowerlineHeader .header-left {
    width: 1fr;
    content-align-horizontal: left;
}

PowerlineHeader .header-right {
    width: auto;
    content-align-horizontal: right;
}

PowerlineFooter {
    width: 100%;
    height: 1;
    content-align-horizontal: right;
}

PowerlineBreadcrumb {
    width: 100%;
    height: auto;
    padding: 0 1;
}

PowerlineBreadcrumb .breadcrumb-container {
    width: 100%;
    height: auto;
}

PowerlineBreadcrumb .crumb {
    width: auto;
    padding: 0 1;
}

PowerlineBreadcrumb .crumb:hover {
    text-style: bold;
}

PowerlineBreadcrumb .separator {
    width: auto;
    padding: 0;
}

/* ==================================================
   FILE BROWSER MODAL SCREEN
   ================================================== */
#file-browser-dialog {
    width: 80;
    height: 30;
    background: #0d0d0d;
    border: heavy $primary;
    padding: 1;
}

#file-browser-dialog #browser-title {
    width: 100%;
    height: 3;
    content-align: center middle;
    text-style: bold;
    color: $accent;
    background: #000000;
    border-bottom: thick $primary;
}

#file-browser-dialog #file-browser {
    width: 100%;
    height: 1fr;
    margin: 1 0;
}

#file-browser-dialog #cancel-btn {
    width: 100%;
    height: 3;
}
